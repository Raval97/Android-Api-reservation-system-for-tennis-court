<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="90" android:endColor="#3700B3" android:startColor="#3700B3" />
        </shape>
    </item>
    <item  android:state_hovered="true">
        <shape>
            <gradient android:angle="90" android:endColor="#07053E" android:startColor="#07053E" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <gradient android:angle="90" android:endColor="#07053E" android:startColor="#3700B3" />
        </shape>
    </item>
</selector>