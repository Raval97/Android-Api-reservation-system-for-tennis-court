<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LogInActivity"
    tools:ignore="ExtraText"
    android:padding="10dp">

    <data>
        <variable
            name="userModel"
            type="com.example.tenniscourtreservation.viewModel.UserViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#2F3336">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="250sp"
                android:layout_height="80sp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/logo" />

            <Button
                android:id="@+id/back"
                android:layout_width="80sp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40sp"
                android:background="@drawable/gradient_button"
                android:text="BACK"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Login"
            android:textColor="#6AA52E"
            android:textSize="30sp"
            tools:targetApi="jelly_bean" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:background="#2F2A4E"
            android:drawableEnd="@drawable/ic_user"
            android:drawableRight="@drawable/ic_user"
            android:hint="Username"
            android:text="@={userModel.username}"
            android:textColor="#fff"
            android:textColorHint="#877676"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10sp"
            android:background="#2F2A4E"
            android:drawableEnd="@drawable/ic_pass"
            android:drawableRight="@drawable/ic_pass"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="@={userModel.password}"
            android:textColor="#fff"
            android:textColorHint="#877676"
            android:textSize="25sp" />

        <Button
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="#E80432"
            android:onClick="@{() -> userModel.onSubmitClick()}"
            android:text="Log in"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/signUpText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:autoLink="all"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppinsmedium"
            android:text="@string/loginHere"
            android:textColor="#6AA52E"
            android:textSize="17sp" />

    </LinearLayout>

</layout>