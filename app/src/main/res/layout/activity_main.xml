<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2F3336"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="250sp"
                android:layout_height="80sp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/logo" />

            <Button
                android:id="@+id/login"
                android:layout_width="80sp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="50sp"
                android:background="@drawable/gradient_button"
                android:text="Log In"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

        <Button
            android:id="@+id/menuButton"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_menu_bg"
            android:text="Menu"
            android:textColor="#fff"
            android:textSize="35sp" />

        <LinearLayout
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/start"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:background="@drawable/gradient_button"
                android:text="Start Page"
                android:textColor="#fff"
                android:textSize="35sp" />

            <Button
                android:id="@+id/gallery"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:background="@drawable/gradient_button"
                android:text="Gallery"
                android:textColor="#fff"
                android:textSize="35sp" />

            <Button
                android:id="@+id/priceList"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:background="@drawable/gradient_button"
                android:text="Price - List"
                android:textColor="#fff"
                android:textSize="35sp" />

            <Button
                android:id="@+id/contact"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5sp"
                android:background="@drawable/gradient_button"
                android:text="Contact"
                android:textColor="#fff"
                android:textSize="35sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30sp"
            android:padding="20dp"
            android:text="Tennis is our passion"
            android:textColor="#A3AA3E"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/contextText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:gravity="center"
            android:text="@string/mainTextContent"
            android:textColor="#9F86CC"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/image4"
            android:layout_width="380sp"
            android:layout_height="260sp"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:src="@drawable/image4" />

    </LinearLayout>

</ScrollView>