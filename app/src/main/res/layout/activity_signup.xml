<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    tools:context=".view.RegisterActivity"
    tools:ignore="ExtraText">

    <data>
        <variable
            name="userModel"
            type="com.example.tenniscourtreservation.viewModel.UserViewModel" />

        <variable
            name="clientModel"
            type="com.example.tenniscourtreservation.viewModel.ClientViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2F3336"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="250sp"
                android:layout_height="80sp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/logo" />

            <Button
                android:id="@+id/back"
                android:layout_width="80sp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40sp"
                android:background="@drawable/gradient_button"
                android:text="BACK"
                android:textColor="#fff"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:fontFamily="@font/poppinsbold"
            android:gravity="center"
            android:text="Register"
            android:textColor="#6AA52E"
            android:textSize="30sp"
            tools:targetApi="jelly_bean" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:background="#2F2A4E"
            android:drawableEnd="@drawable/ic_name"
            android:drawableRight="@drawable/ic_name"
            android:hint="First Name"
            android:text="@={clientModel.name}"
            android:textColor="#fff"
            android:textColorHint="#877676" />

        <EditText
            android:id="@+id/surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#2F2A4E"
            android:drawableEnd="@drawable/ic_name"
            android:drawableRight="@drawable/ic_name"
            android:hint="Second Name"
            android:text="@={clientModel.surname}"
            android:textColor="#fff"
            android:textColorHint="#877676" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#2F2A4E"
            android:drawableEnd="@drawable/ic_email"
            android:drawableRight="@drawable/ic_email"
            android:hint="Email"
            android:text="@={clientModel.emailAddress}"
            android:textColor="#fff"
            android:textColorHint="#877676" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#2F2A4E"
            android:drawableEnd="@drawable/ic_phone"
            android:drawableRight="@drawable/ic_phone"
            android:hint="Phone Number"
            android:inputType="number"
            android:text="@={clientModel.phoneNumber}"
            android:textColor="#fff"
            android:textColorHint="#877676" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="40sp"
            android:background="#2F2A4E"
            android:drawableEnd="@drawable/ic_user"
            android:drawableRight="@drawable/ic_user"
            android:hint="Username"
            android:text="@={userModel.username}"
            android:textColor="#fff"
            android:textColorHint="#877676" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="5sp"
            android:background="#2F2A4E"
            android:drawableEnd="@drawable/ic_pass"
            android:drawableRight="@drawable/ic_pass"
            android:hint="Password"
            android:text="@={userModel.password}"
            android:inputType="textPassword"
            android:textColor="#fff"
            android:textColorHint="#877676" />

        <Button
            android:id="@+id/register"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:background="#E80432"
            android:text="Sign Up"
            android:onClick="@{() -> clientModel.onSignUpClick()}"
            android:textColor="#fff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/loginText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:autoLink="all"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/poppinsmedium"
            android:text="@string/signUpHere"
            android:textColor="#6AA52E"
            android:textSize="17sp" />

    </LinearLayout>

</layout>