<!--<?xml version="1.0" encoding="utf-8"?>-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menuContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="10sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="220sp"
            android:layout_height="80sp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/login"
                android:layout_width="70sp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginTop="20sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/button_menu_bg"
                android:text="Log In"
                android:textColor="#fff"
                android:textSize="16sp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:visibility="visible">

        <Button
            android:id="@+id/menuButton"
            style="@style/menuButton"
            android:text="Menu" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:visibility="gone">

        <Button
            android:id="@+id/startMenu"
            style="@style/menuButton"
            android:text="Start Page" />

        <Button
            android:id="@+id/reservationMenu"
            style="@style/menuButton"
            android:text="Reservation" />

        <Button
            android:id="@+id/eventsMenu"
            style="@style/menuButton"
            android:text="@string/tournaments_events" />

        <Button
            android:id="@+id/priceListMenu"
            style="@style/menuButton"
            android:text="Price - List" />

        <Button
            android:id="@+id/galleryMenu"
            style="@style/menuButton"
            android:text="Gallery" />

        <Button
            android:id="@+id/contactMenu"
            style="@style/menuButton"
            android:text="Contact" />

    </LinearLayout>

</LinearLayout>