<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".PriceListActivity"
    tools:ignore="ExtraText">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include href="menu.xml"
            layout="@layout/menu"
            xmlns="http://www.w3.org/2001/XInclude" />

        <TextView
            android:id="@+id/title"
            style="@style/headerText"
            android:text="Price List" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#402727"
            android:gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="20dp">

                <TableRow
                    android:layout_marginBottom="10dp"
                    android:background="#111737"
                    android:padding="5dp">

                    <TextView
                        style="@style/priceListTableCell"
                        android:layout_weight="0.35"
                        android:text="@string/game_equipment"
                        android:textColor="#fff" />

                    <TextView
                        style="@style/priceListTableCell"
                        android:layout_weight="0.5"
                        android:text="Time"
                        android:textColor="#fff" />

                    <TextView
                        style="@style/priceListTableCell"
                        android:layout_weight="0.15"
                        android:text="Price \n[PLN]"
                        android:textColor="#fff" />
                </TableRow>

                <TableRow
                    android:id="@+id/example"
                    android:background="#776074"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/one"
                        style="@style/priceListTableCell"
                        android:layout_weight="0.35"
                        android:text="From monday to Friday[1h]" />

                    <TextView
                        android:id="@+id/two"
                        style="@style/priceListTableCell"
                        android:layout_weight="0.5"
                        android:text="5 or more hors Tennis Pass" />

                    <TextView
                        android:id="@+id/three"
                        style="@style/priceListTableCell"
                        android:layout_weight="0.15"
                        android:text="35" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>