<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">
    <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="menuButton">
        <item name="android:layout_width">400dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">5sp</item>
        <item name="android:background">@drawable/button_menu_bg</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="headerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">30sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#A3AA3E</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="normalText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">30sp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">#A3AA3E</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ################## PriceList ########################### -->

    <style name="priceListTableCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:padding">15px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#06F32C</item>
    </style>

    <style name="priceListTableRow">
        <item name="android:background">#87081A</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- ################## Events ########################### -->

    <style name="eventsListTableCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:padding">15px</item>
        <item name="android:textColor">#06F32C</item>
    </style>

    <style name="eventsListTableRow">
        <item name="android:background">#161317</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="eventTableCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:padding">15px</item>
        <item name="android:textColor">#AAC5DA</item>
    </style>

    <style name="eventTableRow">
        <item name="android:background">#87081A</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="eventDetails">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#776074</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">40dp</item>
    </style>

    <style name="infoText">
        <item name="android:background">#176A1A</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#D7D9E1</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="actionButton">
        <item name="android:background">@drawable/border_style_1</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#8AAF04</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="reservationDetailsTableCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:padding">15px</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#AAC5DA</item>
    </style>

    <!-- ###################################################### -->
    <!-- #################### Reservation ##################### -->
    <!-- ###################################################### -->

    <style name="calendarDayButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/border_style_1</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#8AAF04</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="headOfSummary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:background">#1F0588</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15px</item>
        <item name="android:layout_marginHorizontal">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">#06BA23</item>
    </style>

    <style name="celOfRowOfSummary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15px</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">#1DF1D8</item>
    </style>

    <style name="headOfSchedule">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15px</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#06BA23</item>
    </style>

    <style name="cellOfSchedule">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:background">#A724BD</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="timeAsCellOfSchedule">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:background">#9E0909</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>



</resources>